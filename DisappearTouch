
local part = script.Parent

local speedDisappear = 0.10		--velocidade para desaparecer, numero maior = mais lento
local speedAppear = 0.05		--velocidade para aparecer, numero maior = mais lento
local interval = 4		--intervalo de tempo at√© a part voltar a aparecer


part.Touched:Connect(function(hit)
	local humanoid = hit.Parent:FindFirstChild("Humanoid")

	if humanoid then
		part.CanTouch = false
		for i = 0, 10, 1 do
			wait(speedDisappear)
			part.Transparency = (i/10)
		end
		part.CanCollide = false
		wait(interval)
		for i = 10, 0, -1 do
			wait(speedAppear)
			part.Transparency = (i/10)
		end
		part.CanCollide = true
		part.CanTouch = true
	end
end)